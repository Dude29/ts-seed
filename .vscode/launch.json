        {
            "name": "Debug project tests",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/scripts/test.sh",
            "console": "integratedTerminal",
            "port": 6969,
            "runtimeArgs": [
                "--inspect-brk=6969",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "Refresh"
        }
    ]
