{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Transpile",
			"detail": "Transpile Typescript source files",
			"command": "tsc",
			"args": [
				 "-p",
				 "${workspaceFolder}"
			],
			"type": "shell",
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "Clean",
			"detail": "Clean project build artifacts",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"${workspaceFolder}/build/"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Lint",
			"detail": "Runs ESLint on project source files",
			"type": "shell",
			"group": "build",
			"command": "${workspaceFolder}/node_modules/.bin/eslint",
			"args": [
				 "--no-error-on-unmatched-pattern" ,
				 "${workspaceFolder}/src/*.{js,ts}",
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": ["$eslint-stylish", "$eslint-compact"]
		},
		{
			"label": "Refresh",
			"detail": "Sets the project to a fresh state ready to be executed",
			"command": "echo Project refreshed!",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Clean",
				"Transpile",
				"Lint"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"promptOnClose": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}
